/* pages/home/me/me.wxss */
.backpicture{
  width:100%;
  height: 1450rpx;
  /*只能用网络地址*/
  background-size: cover;
  /*层叠布局*/
  z-index: 0;
  /*相对位置，这样其他view就能用绝对位置覆盖上去*/
  position: absolute;
  z-index: -1;
}
.topblock{
  height: 275rpx;
  border-radius: 10%;
  display: flex;
  justify-content: center;
  align-items:center;
}
.content1{
  height: 120rpx;
  border-radius: 10%;
  width: 90%;
}
.tiaozhuan1{
  display: inline;
  float: right;
  height: 120rpx;
  width: 120rpx;
}
.content{
  height: 500rpx;
  width: 100%;
}
.headbox{
  height: 200rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items:center;
}
.headimg{
  width: 180rpx;
  height: 180rpx;
  border: rgba(131, 58, 58, 0.26) solid 10rpx;
  border-radius: 50%;
}
.butt{
  height: 200rpx;
  width: 60%;
  display: flex;
  justify-content: center;
  align-items:center;
  font-size: larger;
  font-weight: 900;

}
.leftbutton{
  position: absolute;/*要约束所在位置的子元素的位置要设置成绝对*/
  left: 0;/* 调节靠左 */ 
  width: 200rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items:center;
}
.rightbutton{
  position: absolute;/*要约束所在位置的子元素的位置要设置成绝对*/
  right: 0;/* 调节靠左 */ 
  width: 200rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items:center;
}
.message{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items:center;
}
.con{
  width: 100%;
  height: 150rpx;
  position: relative;
  font-size: larger;
  font-weight: 900;
  display: flex;
  justify-content: center;
  align-items:center;
 color: rgba(92, 52, 0, 0.897);
}