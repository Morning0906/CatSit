/* pages/home/cloth/cloth.wxss */
.canvas{
  width: 750rpx;
  height: 1447rpx;
}
.nav{
  display: flex;
  align-items: center;
  justify-content: center;
  height:500rpx;
  position:relative;
}

.buybutton[plain]{
  width:100rpx;
  height:50rpx;
  position:relative;
  z-index: 5;
  padding: 0;
  border: none;
  opacity: 0;
}

.buy{
  width:100rpx;
  height:50rpx;
  position:relative;
  z-index: 5;
}

.cloth{
  width:100rpx;
  height:100rpx;
  display:inline-block;
  position: absolute;
  z-index: 5;
}
.band{
  width:250rpx;
  height:300rpx;
  display:inline-block;
  position:relative;
}
.background {
  width: 100%;
  height: 100%;
  left: 0;
  position:fixed; 
  z-index: 0;
  background-size:100% 100%;
}
.play {
  font-size: 30rpx;
  background-color: #fff7df;
  color: #c08e77;
  border-radius: 5rpx;
  width: 125rpx;
  text-align: center;
  height: 45rpx;
  line-height: 45rpx;
  font-weight: bold;
  position: absolute;
  bottom: 0;
  left: 0;
  border-color: #cea996;
  border-width: 5px;
}
.btn1{
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
  background-color:transparent;
  color: #999999;
  border-radius: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  z-index: 1000;
}
.content{
  text-align: center;
}
.im{/*圆形图片*/
  display:flex;
  flex-wrap: wrap;
  flex-direction: row;
  right: 15rpx;
  top: 0rpx;
  align-items: right;
  position: fixed;
}